@model Solicitud
@{
    ViewData["Title"] = "Registro de Usuarios";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
}
<h1>@ViewData["Title"]</h1>

<h1>Formulario de registro de Usuarios</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input type="text" asp-for="Nombre" class="form-control">
        <span class="text-red" asp-validation-for="Nombre"></span>
    </div>

   <div class="form-group">
        <label asp-for="Foto"></label>
        <input type="text" asp-for="Foto" class="form-control">
        <span class="text-red" asp-validation-for="Foto"></span>
    </div>

     <div class="form-group">
        <label asp-for="Descripcion"></label>
       <textarea asp-for="Descripcion" class="form-control" cols="30" rows="10"></textarea>
        <span class="text-red" asp-validation-for="Descripcion"></span>
    </div>

      <div class="form-group">
        <label asp-for="Precio"></label>
      <input type="number" asp-for="Precio" class="form-control">
        <span class="text-red" asp-validation-for="Precio"></span>
    </div>

     <div class="form-group">
        <label asp-for="Celular"></label>
      <input type="text" asp-for="Celular" class="form-control">
        <span class="text-red" asp-validation-for="Celular"></span>
    </div>

      <div class="form-group">
        <label asp-for="Lugar"></label>
      <input type="text" asp-for="Lugar" class="form-control">
        <span class="text-red" asp-validation-for="Lugar"></span>
    </div>

     <div class="form-group">
        <label asp-for="Comprador"></label>
      <input type="text" asp-for="Comprador" class="form-control">
        <span class="text-red" asp-validation-for="Comprador"></span>
    </div>

     <div class="form-group">
        
        <div>
            @Html.DropDownList("datos", items, "Seleccione una categoria")
            
        </div>
    
    </div>

    <button class="btn btn-primary">Enviar</button>
</form>